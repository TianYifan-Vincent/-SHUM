  margin: 0 auto;
  overflow: hidden;
  font-size: 0;
  box-shadow: rgba(14, 30, 37, 0.12) 0px 2px 4px 0px, rgba(14, 30, 37, 0.32) 0px 2px 16px 0px;
  border-top-left-radius: 12rpx 8rpx;
  border-top-right-radius: 12rpx 8rpx;
  border-bottom-left-radius: 12rpx 8rpx;
  border-bottom-right-radius: 12rpx 8rpx;
}
