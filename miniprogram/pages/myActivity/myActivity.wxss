/* pages/reservation/reservation.wxss */
.homework {
  width: 650rpx;
  margin: 0 50rpx;
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 5;  /*最多显示5行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
}
.title{
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
}
.grey_title{
  color: #c3c3c3;
}
.content_img {
  height: 362rpx;
  /* width: 585rpx; */
