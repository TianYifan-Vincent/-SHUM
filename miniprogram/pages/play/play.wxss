/* pages/play/play.wxss */
.playbox{
    width: 90%;
    height: 900rpx;
    /* background-color: pink; */
    position: relative;
    margin: auto;
}


.mainimg{
    position: absolute;
    width: 50%;
    height: 50%;
    border-radius: 5%;
    position: absolute;
    top: 0;bottom: 40%;
    left: 0;right:0;
    margin: auto;
    box-shadow: 3px 3px 10rpx black;
    

}
.Name{
    position: absolute;
    text-align: center;
    color: black;
    font-size: 50rpx;
    height: 100rpx;
    line-height: 100rpx;
    top: 30%;bottom: 0;
    left: 0;right:0;
    margin: auto;
    font-weight: bold;
    font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.lrcbox view{
    text-align: center;
    
}
.lrcbox scroll-view{
    position: absolute;
    height:250rpx;
    top: 70%;bottom: 0;
    left: 0;right:0;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.btmbox{
    width: 100%;
    height: 10%;
    /* background-color: red;  */
    position: absolute;
    bottom: 0;
}


.timebox{
    width: 90%;
    height: 50rpx;
    position: absolute;
    /* background-color: skyblue; */
    left:5%;
    bottom:13%;

}
.timebox view{
    float: left;
    text-align: center;
}
.timebox .play_time{
    width: 20%;
}
.timebox .end_time{
    width: 20%;
}
.timebox slider{
    width: 60%;
    float: left;
    display: block;
    margin: 0;
}

.btmbox image{
    display: block;
    float: left;
    width: 50rpx;
    height: 50rpx;
    margin: 0rpx 6.2%;
    margin-top:3%;
}

.btmbox .play{
    display: block;
    float: left;
    width: 80rpx;
    height: 80rpx;
    margin-top: 1%;
}


