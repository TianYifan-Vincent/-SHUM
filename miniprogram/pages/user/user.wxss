/* pages/user/user.wxss */
@import "/weui.wxss";

.pagebox{
  width: 100%;
  height: 100vh;
}
.container{
  padding: 10vw 5vw 0 5vw;
  background-image: linear-gradient(to top, #dfe9f3 0%, white 100%);
  overflow: scroll;
}

.usercard {
  padding:5vw;
  margin-bottom: 5vw;
  /* background-color: #469276; */
  display: flex;
  align-items: center;
  border-radius: 20rpx;
}
.useravatar {
  position: relative;
  width: 20vw;
  height: 20vw;
  margin-right: 5vw;
  border-radius: 50%;
}
.userinfo{
  flex-direction: column;
}
.usernickname {
  display: block;
  font-size: 50rpx;
  color: black;
}
.otherinfo{
  flex-direction: row;
}
.usersex {
  display: inline-block;
  color: #FFF;
  margin-right: 2vw;
}
.userage{
  display: inline-block;
  color: #FFF;
}
.editinfo{
  display: inline-block;
  margin-left: 2vw;
  width: 5vw;
  height: 5vw;
}

.weui-panel__bd{
  margin-top: 5vw;
}

.weui-cell__hd{
  height: 100%;
  margin-right:5vw;
}

.weui-cell__bd.weui-cell_primary{
  margin-top: 4vw;
  margin-bottom: 4vw;
}